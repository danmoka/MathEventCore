@model IEnumerable<MathEvent.Models.Conference>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="row">
    <div class="col form-group">
        <h2 class="mb-4">Личный кабинет</h2>
        <hr class="bg-primary block-1" />
        <p>
            Здесь вы можете редактировать ваши конференции, секции и события!
        </p>
    </div>
</div>

<div class="container rounded border" style="background-image: url(@Url.Content("Images")/all_together3.png);
         min-height: 150px;">
    <div class="row d-flex align-items-center">
        <div class="col-6 text-left">
            @{
                var firstName = UserManager.GetUserAsync(User).Result.Name;
                var lastName = UserManager.GetUserAsync(User).Result.Surname;
                var username = $"{firstName} {lastName}";
                <div class="display-4">@username</div>
            }
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-area="" asp-controller="Account" asp-action="Edit">Изменить</a>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col form-group">
        <h2 class="mb-4">Ваши конференции</h2>
        <hr class="bg-primary block-1" />
    </div>
</div>
<div class="container">
    @foreach (var conference in Model)
    {
        <div class="row mt-4">
            <div class="col-md-12 mb-2">
                <div class="row d-flex align-items-center rounded-top bg-dark p-1">
                    <div class="col text-left p-3 ">
                        <h2 class="text-white">@conference.Name</h2>
                    </div>
                    <div class="col text-right p-3 ">
                        <a class="btn btn-info" asp-route-conferenceId="@conference.Id" asp-area="" asp-controller="Conference" asp-action="Edit">Изменить</a>
                    </div>
                </div>
                <div class="row rounded-bottom border p-2">
                    <div class="row">
                        <div class="col form-group">
                            <h5 class="mb-2">@conference.Location, @conference.Start.Date.ToShortDateString()</h5>
                            <h4 class="mb-2">Секции на конференции:</h4>
                        </div>
                    </div>
                    @foreach (var section in conference.Sections)
                    {
                        var sectionName = section.Name;
                        var sectionId = section.Id;
                        var sectionStart = section.Start;
                        var sectionAddress = section.Location;
                        <div class="col-md-9 mb-2">
                            <div class="row d-flex align-items-center rounded-top p-1 bg-secondary">
                                <div class="col text-left p-3 ">
                                    <h3 class="text-white">@sectionName</h3>
                                </div>
                                <div class="col text-right p-3 ">
                                    <a class="btn btn-info" asp-route-sectionId="@sectionId" asp-area="" asp-controller="Section" asp-action="Edit">Изменить</a>
                                </div>
                            </div>
                            <div class="row rounded-bottom border p-2">
                                <div class="col-md-12 mb-2">
                                    <div class="row">
                                        <div class="col form-group">
                                            <h5 class="mb-2">@sectionAddress, @sectionStart.Date.ToShortDateString()</h5>
                                            <h4 class="mb-2">События на секции:</h4>
                                        </div>
                                    </div>
                                    <div class="card-columns">
                                        @foreach (var performance in section.Performances)
                                        {
                                            var performanceName = performance.Name;
                                            var performanceId = performance.Id;
                                            <div class="card">
                                                <img class="card-img-top" src="~/default.png" />
                                                <div class="card-body">
                                                    <h5 class="card-title">@performanceName</h5>
                                                    <a class="btn btn-info" asp-route-performanceId="@performanceId" asp-area="" asp-controller="Performance" asp-action="Edit">Изменить</a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-2">
                            <img class="w-100 need-hide" src="@Url.Content("Images")/equals_left.png">
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
<div class="row mt-4">
    <div class="col form-group">
        <h2 class="mb-4">События вне секций</h2>
        <hr class="bg-primary block-1" />
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="card-columns">
            @foreach (var performance in (IEnumerable<Performance>)ViewBag.Performances)
            {
                <div class="card">
                    <img class="card-img-top" src="~/default.png" />
                    <div class="card-body">
                        <h5 class="card-title">@performance.Name</h5>
                        <a class="btn btn-info" asp-route-performanceId="@performance.Id" asp-area="" asp-controller="Performance" asp-action="Edit">Изменить</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3">
        <img class="w-100 need-hide" src="@Url.Content("Images")/triangle_left.png">
    </div>
</div>
<div class="row mt-4">
    <div class="col form-group">
        <h2 class="mb-4">События, на которые вы записаны!</h2>
        <hr class="bg-primary block-1" />
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="card-columns">
            @foreach (var ap in (IEnumerable<ApplicationUserPerformance>)ViewBag.SubscribedPerformances)
            {
                <div class="card">
                    <img class="card-img-top" src="~/default.png" />
                    <div class="card-body">
                        <h5 class="card-title">@ap.Performance.Name</h5>
                        <a class="btn btn-info" asp-route-performanceId="@ap.Performance.Id" asp-area="" asp-controller="Performance" asp-action="Card">Перейти</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3">
        <img class="w-100 need-hide" src="@Url.Content("Images")/hex_left.png">
    </div>
</div>