@model MathEvent.Models.Performance
@using MathEvent.Components;

<div class="row">
    <div class="col form-group">
        <h2 class="mb-4">Редактирование события</h2>
        <hr class="block-1" />
    </div>
</div>
<div class="row container mb-2">
    <a class="main-link h5" asp-controller="Account" asp-action="Index"><< В кабинет</a>
</div>
<form asp-controller="Performance" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row d-flex align-items-top">
        <div class="col-md-5">
            <div class="container input-bg-image rounded py-3 mb-2">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text text-sea-crayola"><i class="fas fa-tags"></i></span>
                        </div>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>@*<form-group*@
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text text-sea-crayola"><i class="fas fa-tasks"></i></span>
                        </div>
                        <select asp-for="Type" class="custom-select form-control" asp-items="ViewBag.Types"></select>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>@*<form-group*@
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text text-sea-crayola"><i class="fas fa-map-marked-alt"></i></span>
                        </div>
                        <input asp-for="Location" class="form-control" />
                    </div>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>@*<form-group*@
                <div class="form-group">
                    <label asp-for="Start" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text text-sea-crayola"><i class="fas fa-clock"></i></span>
                        </div>
                        <input asp-for="Start" class="form-control" />
                    </div>
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>@*<form-group*@
                @if (((SelectList)ViewBag.Sections).Count() > 0)
                {
                    <div class="form-group">
                        <label asp-for="SectionId" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-sea-crayola"><i class="fas fa-cheese"></i></span>
                            </div>
                            <select class="custom-select form-control" asp-for="SectionId" asp-items="ViewBag.Sections">
                                <option value=@null>Без секции</option>
                            </select>
                        </div>
                        <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>@*<form-group*@
                }
                <div class="form-group">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="CreatorId" class="form-control" type="hidden" />
                    <span asp-validation-for="CreatorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="DataPath" class="form-control" type="hidden" />
                    <span asp-validation-for="DataPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PosterName" class="form-control" type="hidden" />
                    <span asp-validation-for="PosterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Traffic" class="form-control" type="hidden" />
                    <span asp-validation-for="Traffic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="upload-btn-wrapper">
                        <button class="upload-btn">Загрузить изображение-афишу события</button>
                        <input type="file" name="uploadedFile" accept="image/*" /><br>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-top justify-content-between">
                        <div class="upload-btn-wrapper">
                            <button class="upload-btn">Загрузить материалы</button>
                            <input type="file" name="uploadedProceedings" accept="application/pdf" /><br>
                        </div>
                        @(await Html.RenderComponentAsync<DeleteProceendings>(RenderMode.ServerPrerendered, new { PerformanceId = Model.Id }))
                    </div>
                    <p>Только в формате pdf</p>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="container input-bg-image rounded py-3">
                <div class="form-group">
                    <label asp-for="KeyWords" class="control-label"></label>
                    <textarea asp-for="KeyWords" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="KeyWords" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Annotation" class="control-label"></label>
                    <textarea asp-for="Annotation" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Annotation" class="text-danger"></span>
                </div>
                <div class="form-row form-group d-flex align-items-end mt-4">
                    <a class="btn btn-danger ml-1 mr-4" onclick="return confirm('Вы точно хотите удалить?')" asp-route-performanceId="@Model.Id" asp-area="" asp-controller="Performance" asp-action="Delete">Удалить</a>
                    <input type="submit" class="btn btn-success" value="Сохранить изменения" />
                </div>
            </div>
        </div>
    </div>
</form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
