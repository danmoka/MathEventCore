@model MathEvent.Models.Performance
@using MathEvent.Helpers 

<div class="row">
    <div class="col form-group">
        <h2 class="mb-4">Создайте страницу вашего события!</h2>
        <hr class="bg-primary block-1" />
        <p>
            После создания события пользователи сайта смогут записатсья на ваше событие!
        </p>
    </div>
</div>
<div class="row">
    <a class="nav-link h5" asp-controller="Performance" asp-action="Index"><< К списку событий</a>
</div>
<form asp-controller="Performance" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row d-flex align-items-top">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&#127991</span>
                    </div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>@*<form-group*@
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&#9997</span>
                    </div>
                    <select asp-for="Type" class="custom-select form-control" asp-items="ViewBag.Types"></select>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>@*<form-group*@
            <div class="form-group">
                <label asp-for="Start" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&#128198</span>
                    </div>
                    <input asp-for="Start" class="form-control" />
                </div>
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>@*<form-group*@
            @if (((SelectList)ViewBag.Sections).Count() > 0)
            {
                <div class="form-group">
                    <label asp-for="SectionId" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">&#128047</span>
                        </div>
                        <select class="custom-select form-control" asp-for="SectionId" asp-items="ViewBag.Sections">
                            <option value=@null>Без секции</option>
                        </select>
                    </div>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>@*<form-group*@
            }
            <div class="form-group">
                <h6>Загрузите изображение-афишу вашего события</h6>
                <input type="file" name="uploadedFile" accept="image/*" /><br>
            </div>
        </div>
        <div class="col-md-7">
            <div class="form-group">
                <label asp-for="KeyWords" class="control-label"></label>
                <textarea asp-for="KeyWords" class="form-control" rows="3"></textarea>
                <span asp-validation-for="KeyWords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Annotation" class="control-label"></label>
                <textarea asp-for="Annotation" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Annotation" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-lg btn-success" value="Создать" />
            </div>
        </div>
    </div>
</form>
<hr class="bg-primary block-1 mb-4" />
<div class="row">
    <div class="col-auto"></div>
    <div class="col-md-5">
        <img class="w-100 need-hide" src="@Url.Content(UserDataPathWorker.ConcatPaths(UserDataPathWorker.GetImagesDirectory(), "plus_right.png"))">
    </div>
    <div class="col-md-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4 class="card-title">Обратите внимание </h4>
                <ul class="card-text">
                    <li>После создания пользователи сайта смогут записатсья на ваше событие</li>
                    <li>Событие отобразиться в списке всех событий MathEvent</li>
                    <li>Пользователи MathEvent смогут с вами связаться по электронной почте</li>
                    <li>Отредактировать или удалить событие можно в Кабинете</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-auto"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
