@model MathEvent.Models.ViewModels.CardViewModel
@using MathEvent.Components
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<div class="row">
    <a class="nav-link h5" asp-controller="Performance" asp-action="Index"><< К списку событий</a>
</div>

<div class="conteiner rounded-bottom bg-light border">
    <div class="container background-dark" style="background-image: url(@Url.Content("Images")/all_together.png">
        <div class="row d-flex align-items-end">
            <div class="col-lg-7 p-0 m-0">
                <img class="card-img-top" src="~/default.png">
            </div>
            <div class="col-lg-5 text-right dark-light">
                <h3 class="text-white">@Model.Name</h3>
                <p class="display-4 text-white"><strong>@Model.Start.Date.ToString("d")</strong></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row d-flex align-items-top">
            <div class="col text-left p-3 ">
                @{
                    Model.UserId = UserManager.GetUserId(User);
                }
                @(await Html.RenderComponentAsync<Subscribe>(RenderMode.ServerPrerendered, new { traffic = Model.Traffic, card = Model }))
            </div>
            <div class="col text-right p-3 ">
                @Html.RouteLink("Написать организатору", new { controller = "Performance", action = "ContactTheCreator", creatorId = Model.CreatorId }, new { @class = "btn btn-lg btn-info" })
            </div>
        </div>
    </div>
</div>

<div class="card-deck my-4">
    <div class="card">
        <div class="card-header bg-very-light-blue">
            <h4>О мероприятии</h4>
        </div>
        <div class="card-body">
            <p>@Model.KeyWords</p>
        </div>
    </div>
    <div class="card">
        <div class="card-header bg-very-light-blue">
            <h4>Полное описание</h4>
        </div>
        <div class="card-body">
            <p>@Model.Annotation</p>
        </div>
    </div>
    <div class="card">
        <div class="card-header bg-very-light-blue">
            <h4>Организатор</h4>
        </div>
        <div class="card-body">
            <p>@Model.CreatorName</p>
        </div>
    </div>
</div>
