        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KeyWords)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KeyWords)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Annotation)
        </dt>
        <dd class="col-sm-10">
